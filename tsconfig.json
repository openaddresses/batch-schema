{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "strict": true,
        "module": "es2022",
        "target": "es2022",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "lib/**.ts",
        "test/**.ts"
    ]
}
